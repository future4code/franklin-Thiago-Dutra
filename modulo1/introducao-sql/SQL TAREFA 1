SELECT * FROM Actor

SELECT id, salary from Actor

SELECT id, name from Actor WHERE gender = "male"
A)
SELECT id, name from Actor WHERE gender = "female"
B)
SELECT salary from Actor WHERE name = "Tony Ramos"
C)
// Retorna os usuários que não foram cadastrados genero
SELECT * from Actor WHERE gender = "invalid"
D)
SELECT id,name,salary from Actor WHERE salary <= 500000
E)
//NOME DA TABELA NO SELECT INCORRETO
SELECT id, nome from Actor WHERE id = "002"

SELECT * FROM Actor
WHERE (name LIKE "A%" OR name LIKE "J%") AND salary > 300000

SELECT * FROM Actor
WHERE (name NOT LIKE "A%") AND salary > 350000

SELECT * FROM Actor
WHERE (name LIKE "%g%" OR name LIKE "%G%" OR name LIKE "%a%" OR name LIKE "%A%") AND salary BETWEEN 350000 AND 900000

//TAREFA 2 =====================================================================

USE `franklin-thiago-dutra`
CREATE TABLE Filmes (
    id VARCHAR(255) PRIMARY KEY,
    name VARCHAR (255) NOT NULL,
    sinopse TEXT(255) NOT NULL,
    lancamento_date DATE NOT NULL,
    avaliacao FLOAT NOT NULL
);

INSERT INTO Filmes (id, name, sinopse, lancamento_date, avaliacao)
