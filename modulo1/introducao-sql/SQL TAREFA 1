//6
SELECT id,name,avaliacao from Filmes WHERE id="002"

SELECT * FROM Filmes WHERE name = "Deus é Brasileiro";

SELECT id, name, sinopse FROM Filmes WHERE avaliacao >= 7;

SELECT * FROM Filmes WHERE name LIKE "%deus%" OR sinopse LIKE "%deus%"

SELECT * FROM Filmes
WHERE lancamento_date < "2022-08-16";

SELECT * FROM Filmes
WHERE lancamento_date < "2020-05-04" AND avaliacao >= 7;

